<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @issue.photo.url %>
</p>

<p>
  <strong>Description:</strong>
  <%= @issue.description %>
</p>

<p>
  <strong>Location:</strong>
  <%= @issue.location %>(<%= @issue.lat %>,<%= @issue.long %>)
</p>


<% if session[:is_logged_in] %>
    <%= link_to 'Back', '/issues' %>
<% else %>
    <%= link_to 'Back', '/list' %>
<% end %>
